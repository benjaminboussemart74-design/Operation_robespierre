{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO59051B0136P0D1N000288", "chronotag": "1757946969820", "legislature": "17", "identification": {"numeroLong": "CL288", "numeroOrdreDepot": "288", "prefixeOrganeExamen": "CION_LOIS", "numeroRect": "0"}, "examenRef": "EXANR5L17PO59051B0136P0D1", "texteLegislatifRef": "PIONANR5L17B0136", "triAmendement": "dcaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaau", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "Rapporteur", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA795430", "groupePolitiqueRef": "PO845419", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Delautrette, rapporteur"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 10", "articleDesignationCourte": "ART. 10", "articleDesignation": "ARTICLE 10", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0136.asp#D_Article_10"}, "amendementStandard": {"alinea": {"avant_A_Apres": "Apres", "numero": "4", "alineaDesignation": "Apr\u00e8s l'alin\u00e9a 4"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">I.&nbsp;&#x2013;&nbsp;Apr&#x00E8;s l&#x2019;alin&#x00E9;a&nbsp;4, ins&#x00E9;rer les deux alin&#x00E9;as suivants&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;L&#x2019;employeur titulaire du label mentionn&#x00E9; &#x00E0; l&#x2019;alin&#x00E9;a pr&#x00E9;c&#x00E9;dent peut utiliser le logo concern&#x00E9;, notamment dans ses supports de communication. Ces utilisations ne doivent toutefois pas nuire &#x00E0; l&#x2019;image des collectivit&#x00E9;s territoriales, des &#x00E9;tablissements publics de coop&#x00E9;ration intercommunale et des &#x00E9;lus concern&#x00E9;s.</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;Il peut faire &#x00E9;tat de son soutien &#x00E0; la vie d&#x00E9;mocratique locale dans sa d&#x00E9;claration de performance extra-financi&#x00E8;re pour une prise en compte au titre de la responsabilit&#x00E9; sociale des entreprises. Les repr&#x00E9;sentants d&#x2019;employeurs, tels que les organismes professionnels ou les chambres consulaires, peuvent &#x00E9;galement communiquer sur les labels et utiliser le logo concern&#x00E9; aux fins de promotion des employeurs concern&#x00E9;s, du label et plus largement de la vie d&#x00E9;mocratique locale.&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">II.&nbsp;&#x2013;&nbsp;Compl&#x00E9;ter cet article par les quatre alin&#x00E9;as suivants&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;III.&nbsp;&#x2013;&nbsp;L&#x2019;article&nbsp;L.&nbsp;22&#x2011;10&#x2011;35 du code de commerce est ainsi modifi&#x00E9;&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;1&#x00B0;&nbsp;Apr&#x00E8;s le 2&#x00B0;, il est ins&#x00E9;r&#x00E9; un 3&#x00B0; ainsi r&#x00E9;dig&#x00E9;&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;3&#x00B0; Les actions visant &#x00E0; promouvoir l&#x2019;engagement des citoyens dans la d&#x00E9;mocratie locale et, le cas &#x00E9;ch&#x00E9;ant, le b&#x00E9;n&#x00E9;fice du label &#x00AB;&nbsp;employeur partenaire de la d&#x00E9;mocratie locale&nbsp;&#x00BB; mentionn&#x00E9; &#x00E0; l&#x2019;article&nbsp;L.&nbsp;1621&#x2011;6 du code g&#x00E9;n&#x00E9;ral des collectivit&#x00E9;s territoriales.&nbsp;&#x00BB; ;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;2&#x00B0;&nbsp;Au quatri&#x00E8;me alin&#x00E9;a, les mots&nbsp;: &#x00AB;&nbsp;et 2&#x00B0;&nbsp;&#x00BB; sont remplac&#x00E9;s par les mots&nbsp;: &#x00AB;&nbsp;,&nbsp;2&#x00B0; et 3&#x00B0;&nbsp;&#x00BB;.&nbsp;&#x00BB;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement pr&#x00E9;voit de d&#x00E9;velopper la dimension extra-financi&#x00E8;re du label.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-06-13", "datePublication": "2025-06-18", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-06-18T09:44:37+02:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59051B0136P0D1N000288?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}