{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO838901BTC1603P0D1N000074", "chronotag": "1757950744385", "legislature": "17", "identification": {"numeroLong": "74", "numeroOrdreDepot": "74", "prefixeOrganeExamen": "AN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO838901BTC1603P0D1", "texteLegislatifRef": "PIONANR5L17BTC1603", "triAmendement": "ccaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaro", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA942", "groupePolitiqueRef": "PO845485", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA267763", "PA794554", "PA841359", "PA841017", "PA607619", "PA793796"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;de&#160;Courson,  M.&#160;Bataille, M.&#160;Castiglione, Mme&#160;de&#160;P&#233;lichy, M.&#160;Huwart, M.&#160;Molac et M.&#160;Taupiac"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 8 A", "articleDesignationCourte": "ART. 8 A", "articleDesignation": "ARTICLE 8 A", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1603.asp#D_Article_8_A"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "1", "alineaDesignation": "Alin\u00e9a 1"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">R&#x00E9;tablir cet article dans la r&#x00E9;daction suivante&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;&#x00C0;&nbsp;la fin du II de l&#x2019;article L. 237&#x2011;1 du code &#x00E9;lectoral, les mots : &#x00AB; ou de ses communes membres &#x00BB; sont supprim&#x00E9;s.&nbsp;&#x00BB;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement tend &#x00E0; r&#x00E9;tablir l&#x2019;article&nbsp;8&nbsp;A introduit en s&#x00E9;ance au S&#x00E9;nat et supprim&#x00E9; lors de l&#x2019;examen en commission des Lois, &#x00E0; l&#x2019;Assembl&#x00E9;e nationale.</p><p style=\"text-align: justify;\">Cet amendement vise &#x00E0; lever l&#x2019;incompatibilit&#x00E9; existante entre l&#x2019;exercice d&#x2019;un mandat communautaire et l&#x2019;occupation d&#x2019;un emploi salari&#x00E9; au sein d&#x2019;une des communes membres de l&#x2019;EPCI. Il reste impossible pour une personne d&#x2019;&#x00EA;tre salari&#x00E9;e de la commune dans laquelle elle est &#x00E9;lue au conseil municipal. Face aux difficult&#x00E9;s croissantes &#x00E0; trouver des candidats pour les mandats locaux, notamment en milieu rural, cet amendement r&#x00E9;pond &#x00E0; la n&#x00E9;cessit&#x00E9; de faire &#x00E9;voluer la l&#x00E9;gislation.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-07-01", "datePublication": "2025-07-09", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-07-09T17:55:14+02:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901BTC1603P0D1N000074?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": "RUANR5L17S2025IDS29610", "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"idDiscussion": "32230", "typePosition": "Milieu"}, "discussionIdentique": {"idDiscussion": "81134", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}