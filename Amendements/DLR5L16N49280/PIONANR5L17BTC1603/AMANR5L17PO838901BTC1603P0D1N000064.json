{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO838901BTC1603P0D1N000064", "chronotag": "1757950688235", "legislature": "17", "identification": {"numeroLong": "64", "numeroOrdreDepot": "64", "prefixeOrganeExamen": "AN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO838901BTC1603P0D1", "texteLegislatifRef": "PIONANR5L17BTC1603", "triAmendement": "soaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaafi", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA722390", "groupePolitiqueRef": "PO845425", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA793094", "PA642725", "PA330008", "PA718884", "PA712015", "PA794042", "PA794994", "PA721410", "PA841047", "PA721442", "PA718850", "PA719968"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "Mme&#160;Corneloup,  M.&#160;Ray, M.&#160;Li&#233;geon, M.&#160;Breton, Mme&#160;Bazin-Malgras, M.&#160;Dive, Mme&#160;Dezarnaud, M.&#160;Portier, Mme&#160;Bonnivard, M.&#160;Ceccoli, Mme&#160;Petex, M.&#160;Cordier et Mme&#160;Sylvie&#160;Bonnet"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 30", "articleDesignationCourte": "APR\u00c8S ART. 30", "articleDesignation": "APR\u00c8S L'ARTICLE 30, ins\u00e9rer l'article suivant:", "type": "ARTICLE", "avant_A_Apres": "Apr\u00e8s", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "true", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1603.asp#D_Article_30"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Dans les communes de moins de 3&#x202F;500 habitants, le Gouvernement remet au Parlement, avant le 31&nbsp;d&#x00E9;cembre&nbsp;2026, un rapport &#x00E9;valuant l&#x2019;impact financier des augmentations d&#x2019;indemnit&#x00E9;s des &#x00E9;lus sur les budgets communaux et pr&#x00E9;sentant les modalit&#x00E9;s possibles d&#x2019;un soutien financier volontaire de l&#x2019;&#x00C9;tat aux communes qui en feraient la demande.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Les petites communes disposent de budgets extr&#x00EA;mement restreints. Leur faire supporter seules les charges suppl&#x00E9;mentaires li&#x00E9;es &#x00E0; la revalorisation des indemnit&#x00E9;s des &#x00E9;lus limite consid&#x00E9;rablement leur capacit&#x00E9; d&#x2019;autofinancement et porte atteinte, de facto, &#x00E0; leur autonomie financi&#x00E8;re. Or, celle-ci est garantie par la Constitution, qui consacre le principe de libre administration des collectivit&#x00E9;s territoriales. Cet amendement vise donc &#x00E0; anticiper ces difficult&#x00E9;s en pr&#x00E9;voyant la remise d&#x2019;un rapport &#x00E9;valuant l&#x2019;impact de ces hausses et &#x00E9;tudiant les modalit&#x00E9;s d&#x2019;un soutien financier volontaire de l&#x2019;&#x00C9;tat, afin de pr&#x00E9;server l&#x2019;&#x00E9;quilibre budg&#x00E9;taire et l&#x2019;autonomie des communes rurales.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-07-01", "datePublication": "2025-07-10", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-07-10T12:58:04+02:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901BTC1603P0D1N000064?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": "RUANR5L17S2025IDS29612", "article99": "false", "loiReference": {"codeLoi": "Z3", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}