{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO419610B0463P0D1N000525", "chronotag": "1757947356736", "legislature": "17", "identification": {"numeroLong": "CE525", "numeroOrdreDepot": "525", "prefixeOrganeExamen": "CION-ECO", "numeroRect": "0"}, "examenRef": "EXANR5L17PO419610B0463P0D1", "texteLegislatifRef": "PIONANR5L17B0463", "triAmendement": "paaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaao", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "Rapporteur", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA795144", "groupePolitiqueRef": "PO845407", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Armand, rapporteur"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 25 C", "articleDesignationCourte": "ART. 25 C", "articleDesignation": "ARTICLE 25 C", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0463.asp#D_Article_25_C"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Supprimer cet article.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Il est propos&#x00E9; de supprimer l&#x2019;article&nbsp;25 C, qui demande un rapport annuel au Gouvernement sur les mesures prises afin de garantir la p&#x00E9;rennit&#x00E9; de l&#x2019;activit&#x00E9; industrielle sur les sites des anciennes centrales &#x00E0; charbon.</p><p style=\"text-align: justify;\">Outre le fait qu&#x2019;il ne para&#x00EE;t pas opportun de multiplier les demandes de rapport au sein de la loi, le contexte a &#x00E9;volu&#x00E9; depuis la premi&#x00E8;re lecture de la proposition de loi au S&#x00E9;nat, en octobre dernier&nbsp;:</p><p style=\"text-align: justify;\">&#x2013;&nbsp;la centrale de Saint-Avold, en Moselle, a act&#x00E9; sa reconversion en une centrale fonctionnant au biogaz. La loi du&nbsp;14&nbsp;avril&nbsp;2025 visant &#x00E0; convertir des centrales &#x00E0; charbon vers des combustibles moins &#x00E9;metteurs en dioxyde de carbone pour permettre une transition &#x00E9;cologique plus juste socialement permet de s&#x00E9;curiser juridiquement cette transition&nbsp;;</p><p style=\"text-align: justify;\">&#x2013;&nbsp;sur le site de la centrale de Cordemais, en Loire-Atlantique, EDF a annonc&#x00E9; son projet d&#x2019;y implanter une usine Framatome de pr&#x00E9;fabrication de tuyauteries destin&#x00E9;es aux futurs r&#x00E9;acteurs nucl&#x00E9;aires EPR2.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-05-30", "datePublication": "2025-06-04", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-06-04T17:36:18+02:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419610B0463P0D1N000525?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"idDiscussion": "79746", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}