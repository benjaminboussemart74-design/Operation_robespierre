{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO419610B0463P0D1N000139", "chronotag": "1757947583271", "legislature": "17", "identification": {"numeroLong": "CE139", "numeroOrdreDepot": "139", "prefixeOrganeExamen": "CION-ECO", "numeroRect": "0"}, "examenRef": "EXANR5L17PO419610B0463P0D1", "texteLegislatifRef": "PIONANR5L17B0463", "triAmendement": "bdaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaau", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA720644", "groupePolitiqueRef": "PO845425", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA342240", "PA712015", "PA695512", "PA266808", "PA607090", "PA794058"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Nury,  M.&#160;Bourgeaux, M.&#160;Dive, M.&#160;Lepers, M.&#160;Rolland, M.&#160;Jean-Pierre&#160;Vigier et Mme&#160;Gruet"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 6", "articleDesignationCourte": "ART. 6", "articleDesignation": "ARTICLE 6", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0463.asp#D_Article_6"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "1", "alineaDesignation": "Alin\u00e9a 1"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">&#x00C0;&nbsp;l&#x2019;alin&#x00E9;a&nbsp;1, substituer au mot&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;renouvelables&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">les mots&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;bas carbone&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement du groupe Droite R&#x00E9;publicaine vise &#x00E0; reconna&#x00EE;tre l&#x2019;&#x00E9;lectricit&#x00E9; bas-carbone, notamment d&#x2019;origine nucl&#x00E9;aire, comme le vecteur prioritaire pour l&#x2019;alimentation des v&#x00E9;hicules afin d&#x2019;acc&#x00E9;l&#x00E9;rer la d&#x00E9;carbonation des transports en France. Plut&#x00F4;t que de se limiter &#x00E0; la notion de carburant &#x00AB;&#x202F;renouvelable&#x202F;&#x00BB;, qui n&#x2019;est pas toujours synonyme de faible &#x00E9;mission de gaz &#x00E0; effet de serre, il s&#x2019;agit de privil&#x00E9;gier les sources d&#x2019;&#x00E9;nergie r&#x00E9;ellement bas-carbone.</p><p style=\"text-align: justify;\">&#x00C0; ce titre, l&#x2019;&#x00E9;lectricit&#x00E9; nucl&#x00E9;aire s&#x2019;av&#x00E8;re particuli&#x00E8;rement vertueuse, avec seulement 4g de CO&#x2082; &#x00E9;mis par kWh sur l&#x2019;ensemble de son cycle de vie, contre 11g pour l&#x2019;&#x00E9;olien terrestre.</p><p style=\"text-align: justify;\">Par ailleurs, la production &#x00E9;lectrique issue du gaz ne repr&#x00E9;sentera plus que 3% du mix &#x00E9;nerg&#x00E9;tique en 2050, une part assur&#x00E9;e en partie par du biogaz. Il est donc essentiel de valoriser d&#x00E8;s aujourd&#x2019;hui l&#x2019;&#x00E9;lectricit&#x00E9; fran&#x00E7;aise comme &#x00E9;nergie bas-carbone de r&#x00E9;f&#x00E9;rence pour la mobilit&#x00E9;, afin de r&#x00E9;pondre efficacement &#x00E0; l&#x2019;urgence climatique.<br><br></p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-05-28", "datePublication": "2025-06-04", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-06-04T12:38:14+02:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419610B0463P0D1N000139?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}