{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO838901BTC1522P0D1N000553", "chronotag": "1757950186589", "legislature": "17", "identification": {"numeroLong": "553", "numeroOrdreDepot": "553", "prefixeOrganeExamen": "AN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO838901BTC1522P0D1", "texteLegislatifRef": "PIONANR5L17BTC1522", "triAmendement": "aeaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaahr", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA794470", "groupePolitiqueRef": "PO845470", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "Mme&#160;G&#233;rard"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article PREMIER", "articleDesignationCourte": "ART. PREMIER", "articleDesignation": "ARTICLE PREMIER", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1522.asp#D_Article_1er"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "2", "alineaDesignation": "Alin\u00e9a 2"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">&#x00C0;&nbsp;l&#x2019;alin&#x00E9;a&nbsp;2,&nbsp;supprimer les mots&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;en vue de sa transformation en &#x00E9;tablissement public &#x00E0; caract&#x00E8;re industriel et commercial,&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p>Cet amendement vise &#x00E0; supprimer la perspective d&#x2019;un retour d&#x2019;EDF au statut d&#x2019;EPIC.<br>D&#x2019;une part, EDF est d&#x2019;ores et d&#x00E9;j&#x00E0; d&#x00E9;tenu &#x00E0; 100 % par l&#x2019;&#x00C9;tat, et est donc sous le contr&#x00F4;le int&#x00E9;gral de la puissance publique, cela &#x00E9;tant garanti au niveau l&#x00E9;gislatif depuis l&#x2019;adoption, &#x00E0; l&#x2019;unanimit&#x00E9;, de la loi du 11 avril 2024 visant &#x00E0; prot&#x00E9;ger le groupe &#x00C9;lectricit&#x00E9; de France d'un d&#x00E9;membrement.<br>D&#x2019;autre part, une telle transformation se heurterait &#x00E0; des difficult&#x00E9;s s&#x00E9;rieuses compte tenu des r&#x00E8;gles de droit de la concurrence en mati&#x00E8;re d&#x2019;aides d&#x2019;&#x00C9;tat, la Commission europ&#x00E9;enne consid&#x00E9;rant que les EPIC b&#x00E9;n&#x00E9;ficient d&#x2019;une garantie implicite et illimit&#x00E9;e de leurs dettes et l&#x2019;analysant comme une aide d&#x2019;&#x00C9;tat. En cons&#x00E9;quence, un retour au statut d&#x2019;EPIC risquerait de fragiliser l&#x2019;organisation actuelle d&#x2019;EDF et de ses grands programmes d&#x2019;investissements.</p><p><br>&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-06-12", "datePublication": "2025-06-16", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Non soutenu"}}, "dateSort": "2025-06-16T22:25:39+02:00", "sort": "Non soutenu"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901BTC1522P0D1N000553?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": "RUANR5L17S2025IDS29564", "article99": "false", "loiReference": {"codeLoi": "1", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"idDiscussion": "80030", "typePosition": "Milieu"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}