Additionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1191.asp#D_Article_10"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Supprimer cet article.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement vise &#x00E0; supprimer l'article 10 qui vise &#x00E0; modifier les&nbsp;dispositions p&#x00E9;nales applicables aux chefs d'entreprise, et notamment de supprimer le d&#x00E9;lit d'entrave en&nbsp;cas de manquement &#x00E0; l&#x2019;audit de durabilit&#x00E9; dans le cadre de la CSRD.</p><p style=\"text-align: justify;\">Pour rappel, un d&#x00E9;lit d&#x2019;entrave consiste &#x00E0; porter atteinte &#x00E0; la mise en place et au bon d&#x00E9;roulement de la mission, en l'occurrence ici la mission d&#x2019;audit, la suppression de ce d&#x00E9;lit&nbsp;n'est donc pas envisageable. Par ailleurs, le CSRD est une directive essentielle dans la coh&#x00E9;rence des r&#x00E9;gulations pour la finance verte europ&#x00E9;enne. Il est donc primordial que les informations extra-financi&#x00E8;res qui y seront report&#x00E9;es puissent &#x00EA;tre audit&#x00E9;es de mani&#x00E8;re syst&#x00E9;matique par un organisme tiers.</p><p>&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-04-04", "datePublication": "2025-06-13", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-06-13T15:48:37+02:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901BTC1191P0D1N001474?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": "RUANR5L17S2025IDS29558", "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"idDiscussion": "77178", "typePosition": "Milieu"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}