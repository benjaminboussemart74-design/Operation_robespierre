{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO849474B0481P0D1N000533", "chronotag": "1742926977377", "legislature": "17", "identification": {"numeroLong": "CS533", "numeroOrdreDepot": "533", "prefixeOrganeExamen": "CSVIEECO", "numeroRect": "0"}, "examenRef": "EXANR5L17PO419610B0481P0D1", "texteLegislatifRef": "PRJLANR5L17B0481", "triAmendement": "ebiaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaadac", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA721816", "groupePolitiqueRef": "PO845425", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA793508", "PA718838", "PA722390", "PA793094", "PA840979", "PA266808", "PA794058", "PA695512", "PA721442", "PA330909", "PA841047"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Boucard,  M.&#160;Brigand, M.&#160;Fabrice&#160;Brun, Mme&#160;Corneloup, M.&#160;Ray, M.&#160;Le&#160;Fur, M.&#160;Rolland, Mme&#160;Gruet, M.&#160;Lepers, Mme&#160;Petex, M.&#160;Descoeur et M.&#160;Ceccoli"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 10", "articleDesignationCourte": "ART. 10", "articleDesignation": "ARTICLE 10", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0481.asp#D_Article_10"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "1", "alineaDesignation": "Alin\u00e9a 1"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Apr&#x00E8;s le mot&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;supprim&#x00E9;s&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">supprimer la fin de l&#x2019;alin&#x00E9;a&nbsp;1.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement a pour objet de conserver le r&#x00E9;gime des sanctions financi&#x00E8;res applicables actuellement aux chefs d'entreprise en cas de non-transmission ou de transmission erron&#x00E9;e des informations relatives aux b&#x00E9;n&#x00E9;ficiaires effectifs.</p><p style=\"text-align: justify;\">L'article 10 de ce projet de loi pr&#x00E9;voit en effet d'augmenter consid&#x00E9;rablement l'amende de 7 500 euros &#x00E0; 200 000 euros, soit une multiplication par 26. Or, cette augmentation est disproportionn&#x00E9;e, notamment lorsque les erreurs sont involontaires.</p><p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement propose donc de supprimer la r&#x00E9;f&#x00E9;rence &#x00E0; cette nouvelle amende de 200 000 euros et de maintenir le montant actuel de 7 500 euros. Cela permettrait de r&#x00E9;tablir un &#x00E9;quilibre plus raisonnable entre la n&#x00E9;cessit&#x00E9; de respecter les obligations l&#x00E9;gales et la prise en compte des erreurs involontaires qui pourraient survenir lors de la transmission des informations.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-03-20", "datePublication": "2025-03-25", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-03-25T19:22:34+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO849474B0481P0D1N000533?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "8.5", "divisionCodeLoi": "DC"}, "discussionCommune": {"idDiscussion": "29358", "typePosition": "Milieu"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}