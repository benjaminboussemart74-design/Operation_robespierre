{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO849474B0481P0D1N000535", "chronotag": "1742918667318", "legislature": "17", "identification": {"numeroLong": "CS535", "numeroOrdreDepot": "535", "prefixeOrganeExamen": "CSVIEECO", "numeroRect": "0"}, "examenRef": "EXANR5L17PO419610B0481P0D1", "texteLegislatifRef": "PRJLANR5L17B0481", "triAmendement": "bciaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaad", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA794798", "groupePolitiqueRef": "PO845407", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA795664", "PA721852"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "Mme&#160;Buffet,  M.&#160;Midy et Mme&#160;Lebec"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 4 bis", "articleDesignationCourte": "ART. 4 BIS", "articleDesignation": "ARTICLE 4 BIS", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0481.asp#D_Article_4_bis"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "1", "alineaDesignation": "Alin\u00e9a 1"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">&#x00C0; l&#x2019;alin&#x00E9;a&nbsp;1, apr&#x00E8;s le&nbsp;mot&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;travaux&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">ins&#x00E9;rer les mots&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;ou de ma&#x00EE;trise d&#x2019;&#x0153;uvre&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Introduit par le s&#x00E9;nat, l&#x2019;article&nbsp;4&nbsp;<i>bis</i> pr&#x00E9;voit de relever&nbsp;le seuil de dispense de proc&#x00E9;dure de publicit&#x00E9; et de mise en concurrence pour les march&#x00E9;s de travaux et les&nbsp;lots portant sur des travaux dont la valeur estim&#x00E9;e est inf&#x00E9;rieure &#x00E0; 100&nbsp;000&nbsp;euros hors taxes. Le pr&#x00E9;sent amendement propose d&#x2019;&#x00E9;tendre ce r&#x00E9;gime aux march&#x00E9;s de ma&#x00EE;trise d&#x2019;&#x0153;uvre.&nbsp;Cela permettrait&nbsp;d&#x2019;impulser une dynamique de croissance et b&#x00E9;n&#x00E9;ficierait &#x00E0; l&#x2019;ensemble des acteurs de la fili&#x00E8;re BTP compos&#x00E9;s en grande partie de PME.</p><p style=\"text-align: justify;\">Les march&#x00E9;s de ma&#x00EE;trise d&#x2019;&#x0153;uvre repr&#x00E9;sentent en 2024 un montant de 4&nbsp;Md&#x20AC;, tr&#x00E8;s majoritairement r&#x00E9;partis dans les secteurs du b&#x00E2;timent et des infrastructures (85&nbsp;%). Dispenser ces march&#x00E9;s d&#x2019;une publicit&#x00E9; et d&#x2019;une mise en concurrence pr&#x00E9;alable conduit &#x00E0; simplifier les proc&#x00E9;dures administratives et acc&#x00E9;l&#x00E9;rer le lancement des projets de travaux dans cette fourchette, profitant directement aux PME du BTP et aux ma&#x00EE;tres d&#x2019;ouvrage qui lancent ce type de projets, souvent de petites collectivit&#x00E9;s.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-03-20", "datePublication": "2025-03-24", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Non soutenu"}}, "dateSort": "2025-03-25T17:04:23+01:00", "sort": "Non soutenu"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO849474B0481P0D1N000535?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "2", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"idDiscussion": "76428", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}