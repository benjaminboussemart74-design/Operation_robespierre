{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO849474B0481P0D1N001114", "chronotag": "1742942517281", "legislature": "17", "identification": {"numeroLong": "CS1114", "numeroOrdreDepot": "1114", "prefixeOrganeExamen": "CSVIEECO", "numeroRect": "0"}, "examenRef": "EXANR5L17PO419610B0481P0D1", "texteLegislatifRef": "PRJLANR5L17B0481", "triAmendement": "gcaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaj", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA793904", "groupePolitiqueRef": "PO845401", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA642988", "PA793166", "PA841605", "PA793218", "PA841837", "PA794590", "PA719436", "PA793852", "PA841955", "PA842097", "PA794954", "PA793382", "PA841553"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Lopez-Liguori,  M.&#160;de&#160;L&#233;pinau, M.&#160;Dessigny, M.&#160;Golliot, M.&#160;Guitton, M.&#160;Le&#160;Bourgeois, M.&#160;Loubet, M.&#160;Meizonnet, M.&#160;Meurin, M.&#160;Renault, Mme&#160;Roy, M.&#160;Salmon, M.&#160;Tach&#233;&#160;de&#160;la&#160;Pagerie et M.&#160;Tesson"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 15", "articleDesignationCourte": "ART. 15", "articleDesignation": "ARTICLE 15", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0481.asp#D_Article_15"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "6", "alineaDesignation": "Alin\u00e9a 6"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">&#x00C0; l&#x2019;alin&#x00E9;a&nbsp;6, supprimer les mots&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;, la transition &#x00E9;cologique&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p>Cet article vise &#x00E0; permettre l'extension du dispositif de &#x00AB; projet d'int&#x00E9;r&#x00EA;t national majeur &#x00BB; (PNIM), introduit avec la loi industrie verte pour les projets industriels les plus strat&#x00E9;giques, aux centres de donn&#x00E9;es d'envergure comparable. Cela permettra une acc&#x00E9;l&#x00E9;ration proc&#x00E9;durale concernant la mise en compatibilit&#x00E9; des documents d&#x2019;urbanisme, le raccordement au r&#x00E9;seau d&#x2019;&#x00E9;lectricit&#x00E9;, la reconnaissance de la RIIPM. Pour rev&#x00EA;tir la qualification d'int&#x00E9;r&#x00EA;t national majeur, un data center doit rev&#x00EA;tir une importance particuli&#x00E8;re pour la transition num&#x00E9;rique, la transition &#x00E9;cologique ou la souverainet&#x00E9; nationale, eu &#x00E9;gard &#x00E0; son objet et &#x00E0; son envergure. Or les data center sont des infrastructures particuli&#x00E8;rement &#x00E9;nergivores, qui compensent leur consommation en investissant dans la production d'&#x00E9;nergie renouvelable et intermittente (particuli&#x00E8;rement l'&#x00E9;olien). Or la r&#x00E9;industrialisation de la France ne peut reposer sur une &#x00E9;nergie intermittente comme l'&#x00E9;olien. L&#x2019;amendement vise &#x00E0; supprimer la notion de transition &#x00E9;cologique (sous tendant la prolif&#x00E9;ration d'&#x00E9;oliennes), la souverainet&#x00E9; nationale et la transition num&#x00E9;rique devant primer dans ce cadre d&#x00E9;rogatoire.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-03-20", "datePublication": "2025-03-25", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-03-25T23:41:41+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO849474B0481P0D1N001114?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "6.5", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}