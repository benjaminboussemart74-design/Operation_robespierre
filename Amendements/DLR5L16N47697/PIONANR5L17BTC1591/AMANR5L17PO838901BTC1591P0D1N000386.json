{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO838901BTC1591P0D1N000386", "chronotag": "1757950445269", "legislature": "17", "identification": {"numeroLong": "386", "numeroOrdreDepot": "386", "prefixeOrganeExamen": "AN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO838901BTC1591P0D1", "texteLegislatifRef": "PIONANR5L17BTC1591", "triAmendement": "buaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaamzw", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA841931", "groupePolitiqueRef": "PO845485", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA794554", "PA267763", "PA840817", "PA719138", "PA719286", "PA942", "PA841359", "PA267042", "PA822617", "PA1592", "PA841017", "PA795244", "PA720976", "PA607619", "PA721486", "PA793210", "PA721110", "PA720960", "PA793796", "PA721474", "PA2952", "PA796078"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Mazaury,  M.&#160;Castiglione, M.&#160;Bataille, M.&#160;Bruneau, M.&#160;Castellani, M.&#160;Colombani, M.&#160;de&#160;Courson, Mme&#160;de&#160;P&#233;lichy, M.&#160;Favennec-B&#233;cot, Mme&#160;Froger, M.&#160;Habib, M.&#160;Huwart, M.&#160;Lenormand, M.&#160;Mathiasin, M.&#160;Molac, M.&#160;Naegelen, M.&#160;Panifous, Mme&#160;Sanquer, M.&#160;Serva, M.&#160;Taupiac, M.&#160;Viry, M.&#160;Warsmann et Mme&#160;Youssouffa"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 3", "articleDesignationCourte": "ART. 3", "articleDesignation": "ARTICLE 3", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1591.asp#D_Article_3"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "7", "alineaDesignation": "Alin\u00e9a 7"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Compl&#x00E9;ter la premi&#x00E8;re phrase de l&#x2019;alin&#x00E9;a&nbsp;7 par les mots&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;et apr&#x00E8;s avis&nbsp;conforme de la commission permanente charg&#x00E9;e des affaires culturelles des deux assembl&#x00E9;es parlementaires rendu &#x00E0; la majorit&#x00E9; des suffrages exprim&#x00E9;s au sein des deux commissions&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement vise &#x00E0; ce que les commission parlementaires charg&#x00E9;es de la culture donne leur avis sur le retrait du mandat des PDG de France M&#x00E9;dias et de France M&#x00E9;dias Monde.</p><p style=\"text-align: justify;\">En effet, l'article 3 pr&#x00E9;voit que l'Arcom puisse retirer le mandat de PDG par d&#x00E9;cision fond&#x00E9;e sur des &#x00E9;l&#x00E9;ments de nature &#x00E0; compromettre la capacit&#x00E9; de la personne &#x00E0; poursuivre sa mission dans des conditions garantissant le bon fonctionnement de la soci&#x00E9;t&#x00E9;, la pr&#x00E9;servation de son ind&#x00E9;pendance ou la mise en &#x0153;uvre du projet pris en compte lors de sa nomination.&nbsp;</p><p style=\"text-align: justify;\">Cet amendement vise &#x00E0; renforcer le contr&#x00F4;le d&#x00E9;mocratique en cas de retrait du mandat, en pr&#x00E9;voyant une proc&#x00E9;dure similaire &#x00E0; celle pour la nomination. La d&#x00E9;cision de retrait de l'Arcom serait ainsi soumise &#x00E0; l'avis conforme des commissions parlementaires, qui aurait &#x00E0; juger sur la base de ces m&#x00EA;mes &#x00E9;l&#x00E9;ments.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-06-25", "datePublication": "2025-06-27", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "AC", "libelle": "A discuter"}, "sousEtat": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "dateSort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "sort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901BTC1591P0D1N000386?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "1", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernement