{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO419604B0118P0D1N001091", "chronotag": "1744146687440", "legislature": "17", "identification": {"numeroLong": "AC1091 (Rect)", "numeroOrdreDepot": "1091", "prefixeOrganeExamen": "CION-CEDU", "numeroRect": "1"}, "examenRef": "EXANR5L17PO419604B0118P0D1", "texteLegislatifRef": "PIONANR5L17B0118", "triAmendement": "aeaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaayg", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "Gouvernement", "gouvernementRef": "PO855052", "acteurRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "groupePolitiqueRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "le Gouvernement"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article PREMIER", "articleDesignationCourte": "ART. PREMIER", "articleDesignation": "ARTICLE PREMIER", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0118.asp#D_Article_1er"}, "amendementStandard": {"alinea": {"avant_A_Apres": "Apres", "numero": "15", "alineaDesignation": "Apr\u00e8s l'alin\u00e9a 15"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Apr&#x00E8;s l&#x2019;alin&#x00E9;a&nbsp;15, ins&#x00E9;rer les deux alin&#x00E9;as suivants&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;Le pr&#x00E9;sident-directeur g&#x00E9;n&#x00E9;ral de la soci&#x00E9;t&#x00E9; France M&#x00E9;dias est &#x00E9;galement pr&#x00E9;sident-directeur g&#x00E9;n&#x00E9;ral ou pr&#x00E9;sident du directoire de chacune des soci&#x00E9;t&#x00E9;s contr&#x00F4;l&#x00E9;es par les soci&#x00E9;t&#x00E9;s mentionn&#x00E9;es &#x00E0; l&#x2019;article&nbsp;44 A et aux I, III et IV <i>bis</i> de l&#x2019;article&nbsp;44 lorsqu&#x2019;elles ont une activit&#x00E9; d&#x2019;&#x00E9;dition de services.</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;Le conseil d&#x2019;administration de ces filiales ou soci&#x00E9;t&#x00E9;s comprend alors des repr&#x00E9;sentants de l&#x2019;&#x00C9;tat, dans une proportion qui ne peut pas &#x00EA;tre inf&#x00E9;rieure &#x00E0; un tiers.&nbsp;&#x00BB;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement a pour objet d&#x2019;apporter une garantie en mati&#x00E8;re d&#x2019;ind&#x00E9;pendance de la direction des filiales &#x00E9;ditrices de service public. Le pr&#x00E9;sident-directeur g&#x00E9;n&#x00E9;ral de la soci&#x00E9;t&#x00E9; France M&#x00E9;dias, nomm&#x00E9; par l&#x2019;Arcom, sera PDG ou pr&#x00E9;sident du directoire des filiales, autres que les soci&#x00E9;t&#x00E9;s nationales de programme, &#x00E9;ditrices de services. Il garantit &#x00E9;galement la repr&#x00E9;sentation de l&#x2019;&#x00C9;tat dans les conseils d&#x2019;administration de ces soci&#x00E9;t&#x00E9;s.</p><p style=\"text-align: justify;\">NB&nbsp;: La pr&#x00E9;sente rectification porte sur l&#x2019;expos&#x00E9; sommaire.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-04-01", "datePublication": "2025-04-08", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-04-08T23:11:20+02:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419604B0118P0D1N001091?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}