oucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Formations sup\u00e9rieures et recherche universitaire", "programmeRef": "396792", "autorisationEngagement": "3000000", "creditPaiement": "3000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Vie \u00e9tudiante", "programmeRef": "396794", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherches scientifiques et technologiques pluridisciplinaires", "programmeRef": "396796", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche spatiale", "programmeRef": "396798", "autorisationEngagement": "-3000000", "creditPaiement": "-3000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche dans les domaines de l'\u00e9nergie, du d\u00e9veloppement et de la mobilit\u00e9 durables", "programmeRef": "396800", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche et enseignement sup\u00e9rieur en mati\u00e8re \u00e9conomique et industrielle", "programmeRef": "396802", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche duale (civile et militaire)", "programmeRef": "396804", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement sup\u00e9rieur et recherche agricoles", "programmeRef": "396806", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement du groupe Socialistes et apparent&#x00E9;s vise &#x00E0; augmenter les cr&#x00E9;dits destin&#x00E9;s &#x00E0;&nbsp;l&#x2019;accompagnement p&#x00E9;dagogique des &#x00E9;tudiants pr&#x00E9;sentant un besoin sp&#x00E9;cifique li&#x00E9; &#x00E0; leur trouble ou &#x00E0; leur handicap.</p><p style=\"text-align: justify;\">Pour rappel, 47000 des 51000 &#x00E9;tudiants en situation de handicap sont inscrits &#x00E0; l&#x2019;Universit&#x00E9;, soit 6 fois plus qu&#x2019;en 2007. Les cr&#x00E9;dits de financement de l&#x2019;accompagnement des &#x00E9;tudiants en situation de handicap repr&#x00E9;sentaient 900&nbsp;&#x20AC; par &#x00E9;tudiants en 2007, ils repr&#x00E9;sentent un peu moins de 300&nbsp;&#x20AC; par &#x00E9;tudiants en 2022.</p><p style=\"text-align: justify;\">Accueillant la quasi-int&#x00E9;gralit&#x00E9; des d&#x2019;&#x00E9;tudiants en situation de handicap, souvent sollicit&#x00E9;s par les pouvoirs publics ou salu&#x00E9;es pour leur engagement, les universit&#x00E9;s sont ainsi insuffisamment accompagn&#x00E9;es pour faciliter le parcours de formation des &#x00E9;tudiants en situation de handicap, ce qui n&#x2019;est pas conforme &#x00E0; l&#x2019;id&#x00E9;e d&#x2019;un service public.&nbsp;</p><p style=\"text-align: justify;\">Cet amendement pr&#x00E9;voit ainsi une hausse de 3&nbsp;millions d&#x2019;euros destin&#x00E9;s &#x00E0; l&#x2019;accessibilit&#x00E9; &#x00E9;tudiante.</p><p style=\"text-align: justify;\">Afin de respecter les r&#x00E8;gles de recevabilit&#x00E9; financi&#x00E8;re, cet amendement pr&#x00E9;voit ainsi&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">- une hausse de 3 000 000&nbsp;&#x20AC;, en AE et CP, sur l&#x2019;action n&#x00B0;&nbsp;15 &#x00AB;&nbsp;Pilotage et support du programme&nbsp;&#x00BB; du programme 150 Formations sup&#x00E9;rieures et recherche universitaire&nbsp;</p><p style=\"text-align: justify;\">- une baisse de 3 000 000&nbsp;&#x20AC;, en AE et CP, sur l&#x2019;action&nbsp;n&#x00B0;&nbsp;1&nbsp;&#x00AB;&nbsp;D&#x00E9;veloppement de la technologie spatiale au service de la science&nbsp;&#x00BB; du&nbsp;programme&nbsp;193&nbsp;recherche spatiale,&nbsp;;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-18", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2024-10-23T21:39:22+02:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419604B0324P2D1N000245?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}