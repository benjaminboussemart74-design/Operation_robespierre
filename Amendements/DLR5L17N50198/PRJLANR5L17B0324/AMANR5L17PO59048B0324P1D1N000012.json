{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO59048B0324P1D1N000012", "chronotag": "1739874527442", "legislature": "17", "identification": {"numeroLong": "I-CF12", "numeroOrdreDepot": "12", "prefixeOrganeExamen": "CION_FIN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO59048B0324P1D1", "texteLegislatifRef": "PRJLANR5L17B0324", "triAmendement": "coaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaacs", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA842271", "groupePolitiqueRef": "PO845514", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA605745", "PA842299", "PA720838", "PA796106", "PA795868", "PA267306", "PA721896", "PA795998", "PA774962", "PA335612", "PA796010", "PA793174", "PA795820", "PA721270", "PA795240", "PA795876"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Maurel,  M.&#160;Sansu, M.&#160;Tjibaou, Mme&#160;Bourouaha, M.&#160;B&#233;nard, M.&#160;Castor, M.&#160;Chassaigne, Mme&#160;Faucillon, Mme&#160;K/Bidi, Mme&#160;Lebon, M.&#160;Lecoq, M.&#160;Maillot, M.&#160;Monnet, M.&#160;Nadeau, M.&#160;Peu, Mme&#160;Reid&#160;Arbelot et M.&#160;Rimane"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 13", "articleDesignationCourte": "APR\u00c8S ART. 13", "articleDesignation": "APR\u00c8S L'ARTICLE 13, ins\u00e9rer l'article suivant:", "type": "ARTICLE", "avant_A_Apres": "Apr\u00e8s", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "true", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0324A.asp#D_Article_13"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Le deuxi&#x00E8;me alin&#x00E9;a de l&#x2019;article&nbsp;216 du code g&#x00E9;n&#x00E9;ral des imp&#x00F4;ts est ainsi modifi&#x00E9;&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">1&#x00B0;&nbsp;&#x00C0; la premi&#x00E8;re phrase, le taux&nbsp;: &#x00AB;&nbsp;5&nbsp;%&nbsp;&#x00BB; est remplac&#x00E9; par le taux&nbsp;:&#x00AB;&nbsp;10&nbsp;%&nbsp;&#x00BB;&nbsp;;&nbsp;</p><p style=\"text-align: justify;\">2&#x00B0;&nbsp;&#x00C0; la seconde phrase, le taux&nbsp;: &#x00AB;&nbsp;1&nbsp;%&nbsp;&#x00BB; est remplac&#x00E9; par le taux&nbsp;:&#x00AB;&nbsp;5&nbsp;%&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement vise &#x00E0; accroitre les quotes-parts pour frais et charges, sur les remont&#x00E9;s de dividendes entre des holding op&#x00E9;r&#x00E9;es dans le cadre du r&#x00E9;gime m&#x00E8;re-fille.</p><p style=\"text-align: justify;\">Aujourd&#x2019;hui, les remont&#x00E9;es de dividendes vers des holdings personnelles et le stockage &#x00E0; l&#x2019;int&#x00E9;rieur de celle-ci de ces m&#x00EA;mes dividendes constituent le principal moyen pour les ultras riches de ce substituer &#x00E0; l&#x2019;imp&#x00F4;t sur le revenu (en l&#x2019;occurrence dans ce cas, la flat tax).</p><p style=\"text-align: justify;\">Ces remont&#x00E9;es de dividendes sont aujourd&#x2019;hui facilit&#x00E9;es par le r&#x00E9;gime m&#x00E8;re-fille. Nous proposons d&#x00E8;s lors d&#x2019;accroitre la QPFC qui s&#x2019;applique &#x00E0; chacune des remont&#x00E9;es, &#x00E0; 10&nbsp;% et 5&nbsp;%.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-10", "datePublication": "2024-10-18", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2024-10-18T12:48:56+02:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B0324P1D1N000012?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "CGI", "divisionCodeLoi": "216"}, "discussionCommune": {"idDiscussion": "25656", "typePosition": "Dernier"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}