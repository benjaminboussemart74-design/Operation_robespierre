teProgrammes": {"programme": [{"libelle": "Infrastructures et services de transports", "programmeRef": "383246", "autorisationEngagement": "-5000000", "creditPaiement": "-5000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Affaires maritimes, p\u00eache et aquaculture", "programmeRef": "383248", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Paysages, eau et biodiversit\u00e9", "programmeRef": "383250", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Expertise, information g\u00e9ographique et m\u00e9t\u00e9orologie", "programmeRef": "383252", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Pr\u00e9vention des risques", "programmeRef": "383254", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "\u00c9nergie, climat et apr\u00e8s-mines", "programmeRef": "383256", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Service public de l'\u00e9nergie", "programmeRef": "383258", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Conduite et pilotage des politiques de l'\u00e9cologie, du d\u00e9veloppement et de la mobilit\u00e9 durables", "programmeRef": "383260", "autorisationEngagement": "5000000", "creditPaiement": "5000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Fonds d'acc\u00e9l\u00e9ration de la transition \u00e9cologique dans les territoires", "programmeRef": "383262", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "S\u00fbret\u00e9 nucl\u00e9aire et radioprotection", "programmeRef": "383264", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Avec cet amendement, les d&#x00E9;put&#x00E9;.es du groupe parlementaire LFI-NFP demandent l&#x2019;augmentation des cr&#x00E9;dits allou&#x00E9;s &#x00E0; la Commission Nationale du D&#x00E9;bat Public (CNDP).</p><p style=\"text-align: justify;\">La CNDP doit avoir les moyens d&#x2019;assurer ses missions dans de bonnes conditions, &#x00E0; savoir garantir le droit &#x00E0; l&#x2019;information et &#x00E0; la participation du public sur l&#x2019;&#x00E9;laboration des projets qui ont des impacts environnementaux. Le choix du mix &#x00E9;nerg&#x00E9;tique en France doit en effet faire l&#x2019;objet d&#x2019;un d&#x00E9;bat et ne peut pas &#x00EA;tre d&#x00E9;cid&#x00E9; par le seul Pr&#x00E9;sident de la R&#x00E9;publique, comme il l'a fait pour la relance du nucl&#x00E9;aire.</p><p style=\"text-align: justify;\">Par ailleurs, une concertation approfondie et plus syst&#x00E9;matique constitue un levier d&#x00E9;cisif d&#x2019;acc&#x00E9;l&#x00E9;ration du d&#x00E9;ploiement des &#x00E9;nergies renouvelables dans notre pays. En effet, les Fran&#x00E7;ais et Fran&#x00E7;aises sont aujourd&#x2019;hui largement favorables &#x00E0; ces &#x00E9;nergies selon les enqu&#x00EA;tes d&#x2019;opinion. Pourtant, de nombreux projets se trouvent enlis&#x00E9;s dans des situations de conflits locaux qui finissent au contentieux. La participation populaire permet de limiter ces &#x00E9;cueils en offrant aux porteurs de projets d'&#x00E9;nergies renouvelables la possibilit&#x00E9; de faire &#x00E9;voluer leurs projets d&#x2019;implantations en fonction des besoins &#x00E9;conomiques, sociaux et environnementaux locaux. Plus la concertation est s&#x00E9;rieuse et faite en amont, moins le risque contentieux est &#x00E9;lev&#x00E9;.</p><p style=\"text-align: justify;\">Les d&#x00E9;put&#x00E9;.es LFI-NFP proposent de ponctionner 5 millions d&#x2019;euros en CP et en AE de l&#x2019;action 52 &#x00AB; Transport a&#x00E9;rien &#x00BB; du programme 203 &#x00AB; Infrastructures et services de transport &#x00BB; vers l&#x2019;action 25 du programme 217 &#x00AB; Conduite et pilotage des politiques de l'&#x00E9;cologie, du d&#x00E9;veloppement et de la mobilit&#x00E9; durables &#x00BB;. Les d&#x00E9;put&#x00E9;.es LFI-NFP appelent le Gouvernement &#x00E0; lever le gage.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-18", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2024-10-23T18:28:27+02:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419865B0324P2D1N000119?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "217", "divisionCodeLoi": "217"}, "discussionCommune": {"idDiscussion": "26248", "typePosition": "Dernier"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}